mixin informationCard(current, last, next, number)
    .box-information
        .box-day-information
            .box-header-information-card
                p.label= number + 1
                - if (current == true) 
                    - if (preparedHolidays[number].title.length > 0)
                        img.flag(src='/images/flags/netherlands.png', alt='flag')
        - if (current == true) 
            .information-card.active
                - if(preparedEvents[number].title.length > 0)
                    a(href=`/list/${requestYear}/${requestMonth}`)
                        .information-card-events.total-number(role='button' data-toggle='popover')
                            - if(preparedEvents[number].title.length > 1)
                                p.label.light= `${preparedEvents[number].title.length} EVENTS`
                            - else
                                p.label.light= `${preparedEvents[number].title.length} EVENT`
                    .information-card-events.new-number
                        p.sublabel.light NO NEW EVENTS
        - else if (current == false)
            .information-card.inactive
                - if (last == true)
                    - if(preparedLastMonthEvents[number].title.length > 0)
                        a(href=`/list/${requestYear}/${requestMonth - 1}`)
                            .information-card-events.total-number(role='button' data-toggle='popover')
                                - if(preparedLastMonthEvents[number].title.length > 1)
                                    p.label.light= `${preparedLastMonthEvents[number].title.length} EVENTS`
                                - else
                                    p.label.light= `${preparedLastMonthEvents[number].title.length} EVENT`
                        .information-card-events.new-number
                            p.sublabel.light NO NEW EVENTS
                - if (next == true)
                    - if(preparedNextMonthEvents[number].title.length > 0)
                        a(href=`/list/${requestYear}/${requestMonth + 1}`)
                            .information-card-events.total-number(role='button' data-toggle='popover')
                                - if(preparedNextMonthEvents[number].title.length > 1)
                                    p.label.light= `${preparedNextMonthEvents[number].title.length} EVENTS`
                                - else
                                    p.label.light= `${preparedNextMonthEvents[number].title.length} EVENT`
                        .information-card-events.new-number
                            p.sublabel.light NO NEW EVENTS
        
            

            
        
                    
        
            
        



            






